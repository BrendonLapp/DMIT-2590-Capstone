@using Capstone.Web.Admin
@using Capstone.BLL.Security;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Capstone</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @*<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">*@
    @*<link href="~/Styles/FontAwesome/webfonts/" rel="stylesheet" />*@
    <script src="~/Styles/FontAwesome/all.js"></script>
    <link href="~/Styles/FontAwesome/all.css" rel="stylesheet" />
    <link href="~/Styles/master.css" rel="stylesheet" type="text/css" />
    <link href="~/favicon.ico" rel="icon" type="image/x-icon" />
</head>
<body>
    <header>
        <div class="navbar">
            <a href="~/Home/index">
                <img src="~/Pictures/logo.jpg" alt="WCB Logo" />
            </a>

            <div>
                <a href="#" id="button-hide">
                    <i class="fas fa-bars"></i>
                </a>
            </div>

            <div class="userbox">
                <h2>Logged in: @IdentityHelper.GetEmployeeName()</h2>
            </div>

        </div>

        <div class="navpanel">

            <div class="navbacking">
                @* Home box *@
                <a href="~/Home">
                    <div class="navbox">
                        <div class="icon">
                            <i class="fas fa-home"></i>
                        </div>
                        <div class="name">
                            <h3>Home</h3>
                        </div>
                    </div>
                </a>

                @* Personal Calendar box *@
                <a href="~/PersonalScheduleView/Index">
                    <div class="navbox">
                        <div class="icon">
                            <i class="fas fa-calendar-week"></i>
                        </div>
                        <div class="name">
                            <h3>Personal Calendar</h3>
                        </div>
                    </div>
                </a>

                @* Team Calendar box*@
                <a href="~/TeamCalendarView/Index">
                    <div class="navbox">
                        <div class="icon">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <div class="name">
                            <h3>Team Calendar</h3>
                        </div>
                    </div>
                </a>

                @* My Projects box *@
                <a href="~/PersonalProjectsView/Index">
                    <div class="navbox">
                        <div class="icon">
                            <i class="fas fa-list-ul"></i>
                        </div>
                        <div class="name">
                            <h3>My Projects</h3>
                        </div>
                    </div>
                </a>
                @if (User.IsInRole(SecurityRoles.SupervisorRole) || User.IsInRole(SecurityRoles.TeamAdminRole))
                {
                    @* Overtime Management box *@
                    <a href="~/OvertimeRequestView/Index">
                        <div class="navbox">
                            <div class="icon">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="name">
                                <h3>Overtime Management</h3>
                            </div>
                        </div>
                    </a>

                    @* Employee Hub box *@
                    <a href="~/EmployeeView">
                        <div class="navbox">
                            <div class="icon">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="name">
                                <h3>Employee Management</h3>
                            </div>
                        </div>
                    </a>

                    @* Project Hub box *@
                    <a href="~/ProjectHubView/Index">
                        <div class="navbox">
                            <div class="icon">
                                <i class="fas fa-project-diagram"></i>
                            </div>
                            <div class="name">
                                <h3>Project Hub</h3>
                            </div>
                        </div>
                    </a>

                    @* Team Hub box *@
                    <a href="~/TeamView">
                        <div class="navbox">
                            <div class="icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="name">
                                <h3>Team Management</h3>
                            </div>
                        </div>
                    </a>
                }
                @if (User.Identity.IsAuthenticated && User.IsInRole(SecurityRoles.GlobalAdminRole))
                {
                    @* Administrative Hub box *@
                    <a href="~/AdministrativeHub/Index">
                        <div class="navbox">
                            <div class="icon">
                                <i class="fas fa-city"></i>
                            </div>
                            <div class="name">
                                <h3>Administrative Hub</h3>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>


    </header>

    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/menu.js"></script>
</body>
</html>
