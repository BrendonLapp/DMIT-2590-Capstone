@model IEnumerable<Capstone.Web.Models.ScheduleTypeViewModel>

@{
    ViewBag.Title = "All Schedule Types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Schedule Types</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<p class="alert-info">@TempData["message"]</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoursPerDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeactivationDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HoursPerDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActivationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeactivationDate)
        </td>
        <td class="buttoncolumn">
            <div class="custombuttons">
                @Html.ActionLink("Edit", "Edit", new { scheduleTypeID = item.ScheduleTypeID })
            </div>
            <div class="custombuttons">
                @Html.ActionLink("Deactivate", "Deactivate", new { scheduleTypeID = item.ScheduleTypeID })
            </div>
            <div class="custombuttons">
                @Html.ActionLink("Details", "Details", new { scheduleTypeID = item.ScheduleTypeID })
            </div>
        </td>
    </tr>
    }

</table>
