@model Capstone.Web.Models.TeamCalendar.TeamCalendarAbsenceViewModel

@{
    ViewBag.Title = "_AbsenceCreate";
}

<h2>Create Absence</h2>
@using (Html.BeginForm())
{
@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@Html.HiddenFor(model => model.EmployeeID)
@Html.HiddenFor(model => model.AbsenceDate)

<div class="form-group titlebox">
    <h4> For @Html.DisplayFor(model => model.EmployeeName) On @Html.DisplayFor(model => model.AbsenceDate)</h4>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.OffDayID, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10 removefloat">
        @Html.DropDownListFor(model => model.OffDayID, (SelectList)ViewBag.OffDaySelect, new { @class = "form-control" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.HalfDay, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10 removefloat">
        @Html.EditorFor(model => model.HalfDay, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Hours, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10 removefloat">
        @Html.EditorFor(model => model.Hours, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10 removefloat">
        @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control", autocomplete = "off" } })
        @{ Html.EnableClientValidation(true); }
    </div>
</div>
}

<button id="CreateSaveButton" class="btn btn-default savebutton">Save</button>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")

    <script src="~/Scripts/DatePicker.js"></script>
    <script type="text/javascript">


        $('input[type=text]').each(function () {
            var req = $(this).attr('data-val-required');
            if (undefined != req) {
                var label = $('label[for="' + $(this).attr('id') + '"]');
                var text = label.text();
                if (text.length > 0) {
                    label.append('<span style="color:red"> *</span>');
                }
            }
        });

        $('input[type=datetime]').each(function () {
            var req = $(this).attr('data-val-required');
            if (undefined != req) {
                var label = $('label[for="' + $(this).attr('id') + '"]');
                var text = label.text();
                if (text.length > 0) {
                    label.append('<span style="color:red"> *</span>');
                }
            }
        });
    </script>

}