@model Capstone.Web.Models.Employee.EntitledTimeOffViewModel
<div>
    @Html.HiddenFor(model => model.OffDayTypeID)
    @Html.HiddenFor(model => model.OffDayTypeName)
    <div class="form-group">
        <label class="control-label col-md-2">@Model.OffDayTypeName</label>
        <div class="col-md-10 removefloat">
            @Html.EditorFor(model => model.HoursAccumulated, new { htmlAttributes = new { @class = "form-control", type="number", step=0.01 } })
        </div>
    </div>

</div>


